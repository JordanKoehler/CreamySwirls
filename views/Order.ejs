<%- include("partials/header") -%>

<div class="row">
  <div class="col-lg-6">

    <h3>Create Your Ice Cream</h3>

    <!-- form -->
    <form>
      <!-- Tub Size -->
      <h4>Tub Size</h4>
      <div class="container">
        <form role="form">
          <div class="checkbox text-left">
            <label class="form-checkbox form-icon" for="s_fac">
              <input id="s_fac" type="checkbox" class="sev_check"> 14oz - $19.99
            </label>
          </div>
          <div class="checkbox text-left">
            <label class="form-checkbox form-icon" for="s_fac1">
              <input id="s_fac1" type="checkbox" class="sev_check"> 16oz - $26.99
            </label>
          </div>
          <div class="checkbox text-left">
            <label class="form-checkbox form-icon" for="s_fac2">
              <input id="s_fac2" type="checkbox" class="sev_check"> 24oz - $29.99
            </label>
          </div>
        </form>
      </div>

      <!-- Flavours -->
      <h4>Tub Size</h4>
      <h5>Select 1-2 Flavours</h5>
      <form>
      <div class="container">
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Chocolate
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Vanilla
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Strawberry
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Coconut
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Lime
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Cookies 'n' Cream
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Marshmellow
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Orange
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Banana
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Raspberry
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Dark Chocolate
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Caramel
          </div>
        </div>
      </div>


      <!-- Flavour of Month -->
      <h5>Flavours of the Month</h5>
      <div class="container">
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Matcha
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Sea Salt Choco
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Oreo Brownie
          </div>
        </div>
      </div>
      </form>

      <!-- Additions -->
      <h4>Additions</h4>
      <form>
      <div class="container">
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Choco Chips
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Banana Chips
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">PB Cups
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Strawberries
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Gummy Bears
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Gummy Worms
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Popping Boba
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">M&M's
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Skor
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <input type="checkbox">Oreo Chunks
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Fuzzy Peaches
          </div>
          <div class="col col-lg-3">
            <input type="checkbox">Coconut Shavings
          </div>
        </div>
      </div>
      </form>

      <!-- Confirm -->
      <div class="text-center">
        <button type="button" class="btn btn btn-lg submit-btn">Confirm Order</button>
      </div>
    </div>

  <div class="col-lg-6 ">
    <img class="sidePic" src="orderImage.png" alt="">
  </div>
  </div>
  </div>
</body>

</html>
